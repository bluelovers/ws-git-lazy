{
  "name": "ws-git-lazy",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/@git-lazy/*",
    "packages/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\"",
    "lerna-publish": "yarn run prepublishOnly && lerna publish --yes --cd-version patch",
    "prepublishOnly": "yarn run prepublishOnly:check-bin",
    "prepublishOnly:check-bin": "ynpx --quiet @yarn-tool/check-pkg-bin",
    "prepublishOnly:lockfile": "ynpx --quiet sync-lockfile",
    "ncu": "yarn-tool ncu -u && yarn-tool ws exec yarn-tool ncu -- -u",
    "sort-package-json": "yarn-tool sort && yarn-tool ws exec yarn-tool sort"
  },
  "resolutions": {},
  "dependencies": {
    "bluebird": "^3.7.2",
    "fs-extra": "^10.0.1",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@bluelovers/tsconfig": "^1.0.28",
    "@types/bluebird": "^3.5.36",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^17.0.23",
    "@types/parse-git-config": "^3.0.1",
    "@types/yargs": "^17.0.10",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4"
  }
}
